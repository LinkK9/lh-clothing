//- Extends
extends template-part/layout.pug


//- Pug
block title
  title LH Clothing
block link
    link(rel='stylesheet' type='text/css' href='node_modules/slick-carousel/slick/slick.css')
    link(rel='stylesheet' type='text/css' href='node_modules/slick-carousel/slick/slick-theme.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js')
    link(rel="stylesheet", href="style/style.css")
block main
    nav(aria-label='breadcrumb').container
        ol.breadcrumb
            li.breadcrumb-item
                a(href='#') Trang chủ
            li.breadcrumb-item
                a(href='#') Bé gái
            li.breadcrumb-item
                a(href='#') Áo
            li.breadcrumb-item.active(aria-current='page') Áo nỉ bé gái cổ tròn
    
    .product.container
        .product-main 
            .product-box-image.d-flex
                .gallery-col.slider.slider-nav
                    div
                        img(src="image/1.jpg", alt="", srcset="")
                    div 
                        img(src="image/2.jpg", alt="", srcset="")
                    div 
                        img(src="image/nibegai.jpg", alt="", srcset="")
                    div 
                        img(src="image/3.jpg", alt="", srcset="")
                .image-main.slider.slider-for
                    div
                        img(src="image/1.jpg", alt="", srcset="")
                    div 
                        img(src="image/2.jpg", alt="", srcset="")
                    div 
                        img(src="image/nibegai.jpg", alt="", srcset="")
                    div 
                        img(src="image/3.jpg", alt="", srcset="")
            .product-info 
                .product-title 
                .product-price 
                .product-color 
                .product-size 
                .product-quantity 
                form(action="").submit-button
                .product-description
    

    //- scripts
    script(type='text/javascript' src='https://code.jquery.com/jquery-1.11.0.min.js')
    script(type='text/javascript' src='https://code.jquery.com/jquery-migrate-1.2.1.min.js')
