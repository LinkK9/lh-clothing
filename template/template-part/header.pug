//- Mixin: 
mixin menu-link(title)
    li.nav-item.dropdown
                    a#navbarDropdown.nav-link(href='#' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false').font-weight-bold= title 
                    .dropdown-menu(aria-labelledby='navbarDropdown')
                        a.dropdown-item(href='#').font-weight-bold SẢN PHẨM MỚI
                        .dropdown-divider
                        a.dropdown-item(href='#').font-weight-bold ÁO
                        a.dropdown-item(href='#') Áo phông
                        a.dropdown-item(href='#') Áo nỉ
                        a.dropdown-item(href='#') Áo len
                        a.dropdown-item(href='#') Áo sơ mi
                        a.dropdown-item(href='#') Áo khoác
                        .dropdown-divider
                        a.dropdown-item(href='#').font-weight-bold QUẦN
                        a.dropdown-item(href='#') Quần jeans
                        a.dropdown-item(href='#') Quần kaki
                        a.dropdown-item(href='#') Quần vải
                        a.dropdown-item(href='#') Quần shorts
                        .dropdown-divider
                        a.dropdown-item(href='#').font-weight-bold PHỤ KIỆN KHÁC 


