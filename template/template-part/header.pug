mixin menu-link(title)
    li.nav-item.dropdown
                    a#navbarDropdown.nav-link.dropdown-toggle(href='#' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false').font-weight-bold= title 
                        
                    .dropdown-menu(aria-labelledby='navbarDropdown')
                        a.dropdown-item(href='product-list.html').font-weight-bold SẢN PHẨM MỚI
                        .dropdown-divider
                        a.dropdown-item(href='product-list.html').font-weight-bold ÁO
                        a.dropdown-item(href='product-list.html') Áo phông
                        a.dropdown-item(href='product-list.html') Áo nỉ
                        a.dropdown-item(href='product-list.html') Áo len
                        a.dropdown-item(href='product-list.html') Áo sơ mi
                        a.dropdown-item(href='product-list.html') Áo khoác
                        .dropdown-divider
                        a.dropdown-item(href='product-list.html').font-weight-bold QUẦN
                        a.dropdown-item(href='product-list.html') Quần jeans
                        a.dropdown-item(href='product-list.html') Quần kaki
                        a.dropdown-item(href='product-list.html') Quần vải
                        a.dropdown-item(href='product-list.html') Quần shorts
                        .dropdown-divider
                        a.dropdown-item(href='product-list.html').font-weight-bold PHỤ KIỆN KHÁC 



