header.container
    nav.navbar.navbar-expand-lg.navbar-light.my-nav
        a.navbar-brand(href='index.html')
            img(src="image/logo-crop.png", alt="", srcset="")
        button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
            span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
            ul.navbar-nav.m-auto
                +menu-link('NAM')
                +menu-link('NỮ')
                +menu-link('BÉ GÁI')
                +menu-link('BÉ TRAI')
            
        .search-cart-wrap
            .search-cart.d-flex.align-items-center.justify-content-between
                form.form-inline.my-2.my-lg-0.d-flex.flex-nowrap
                    input.form-control(type='search' placeholder='Tìm kiếm' aria-label='Search')#Search
                    button(type='submit').loupe
