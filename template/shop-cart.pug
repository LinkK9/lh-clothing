//- Extends
extends template-part/layout.pug

//- Pug
block title
  title LH Clothing
block link
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js')
    link(rel="stylesheet", href="style/style.css")
block main
    nav(aria-label='breadcrumb').container.sub-nav
        ol.breadcrumb
            li.breadcrumb-item
                a(href='index.html') Trang chủ
            li.breadcrumb-item.active(aria-current='page') Giỏ Hàng

    .cart-view.container
        .shopcart-title THÔNG TIN GIỎ HÀNG
        form.cart
            table.cart-table 
                thead
                    tr.cart-header 
                        th.cart-product-name Sản phẩm
                        th.cart-product-color Màu sắc
                        th.cart-product-size Kích cỡ
                        th.cart-product-quantity Số lượng
                        th.cart-product-price Đơn giá
                        th.cart-product-sumary Thành tiền
                        th.cart-product-delete Xóa
                tbody 
                    tr.cart-item 
                        td.cart-product-name
                            img(src="image/nibegai.jpg", alt="", srcset="")
                            div
                                p.product-name Áo nỉ bé gái cổ tròn
                                p.product-code Mã: 19000123-00
                        td.cart-product-color 
                            .color-box.pink.box
                            .color-code Pink-007
                        td.cart-product-size
                            .size-box.box M
                        td.cart-product-quantity
                            #quantity-counter 
                                button -
                                input#quantity(type="number", name="", value="1")
                                button +
                        td.cart-product-price
                            .product-price 170.000đ
                        td.cart-product-sumary 
                            .sumary-of-quantity 170.000đ
                        td.cart-product-delete 
                            a.delete-item(href="#")
                                img(src="image/icon/delete.svg", alt="", srcset="")
                    
                    tr.cart-item 
                        td.cart-product-name
                            img(src="image/3.jpg", alt="", srcset="")
                            div
                                p.product-name Áo nỉ bé gái cổ tròn
                                p.product-code Mã: 19000321-03
                        td.cart-product-color 
                            .color-box.pink.box
                            .color-code Pink-201
                        td.cart-product-size
                            .size-box.box M
                        td.cart-product-quantity
                            #quantity-counter 
                                button -
                                input#quantity(type="number", name="", value="1")
                                button +
                        td.cart-product-price
                            .product-price 170.000đ
                        td.cart-product-sumary 
                            .sumary-of-quantity 170.000đ
                        td.cart-product-delete 
                            a.delete-item(href="#")
                                img(src="image/icon/delete.svg", alt="", srcset="")
            table.table-sum.col-4
                tbody
                    tr.total-products 
                        td Tổng số lượng
                        td 2 Sản phẩm
                    tr.sumary-estimate
                        td Số tiền tạm tính
                        td 340.000đ

            .submit-button.d-flex.justify-content-end
                button(type="submit").add-cart THÊM VÀO GIỎ
                button(type="submit").payment THANH TOÁN NGAY
                

                            