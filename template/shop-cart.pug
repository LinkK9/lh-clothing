//- Extends
extends template-part/layout.pug

//- Pug
block title
  title LH Clothing
block link
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js')
    link(rel="stylesheet", href="style/style.css")
block main
    nav(aria-label='breadcrumb').container.sub-nav
        ol.breadcrumb
            li.breadcrumb-item
                a(href='index.html') Trang chủ
            li.breadcrumb-item.active(aria-current='page') Giỏ Hàng

    .cart-view.container
        form.cart
            table.cart-table 
                thead
                    tr.cart-header 
                        th.cart-product-name Sản phẩm
                        th.cart-product-color Màu sắc
                        th.cart-product-size Kích cỡ
                        th.cart-product-quantity Số lượng
                        th.cart-product-price Đơn giá
                        th.cart-product-sumary Thành tiền
                        th.cart-product-delete Xóa
                tbody 
                    